<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_tenHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10"
            android:text="Tên học phần: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_name_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10"
            android:text="ABC"
            app:layout_constraintStart_toEndOf="@+id/title_tenHP"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_maHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:text="Mã học phần: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_tenHP" />

        <TextView
            android:id="@+id/text_maHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/text_name_subject"
            app:layout_constraintTop_toBottomOf="@+id/title_tenHP" />

        <TextView
            android:id="@+id/title_hocky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="Học kỳ: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_maHP" />

        <TextView
            android:id="@+id/text_hoc_ky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/text_name_subject"
            app:layout_constraintTop_toBottomOf="@+id/title_maHP" />

        <TextView
            android:layout_marginBottom="@dimen/dimen_10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/title_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="Số tín chỉ: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_hocky" />

        <TextView
            android:layout_marginBottom="@dimen/dimen_10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/text_so_tin_chi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/text_name_subject"
            app:layout_constraintTop_toBottomOf="@+id/title_hocky" />

        <ImageView
            android:layout_marginEnd="@dimen/dimen_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>